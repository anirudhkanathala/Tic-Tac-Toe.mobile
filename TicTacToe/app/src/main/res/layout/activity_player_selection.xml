<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerSelectionActivity">

    <TextView
            android:text="@string/welcome_to_tik_tao_toe"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeTV"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp" android:textColor="@android:color/holo_purple"/>
    <TextView
            android:text="@string/choose_the_piece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseTV"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTV" android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"/>
    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/o"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonO"
            android:textSize="50sp" android:layout_marginStart="80dp" app:layout_constraintVertical_bias="0.686"/>
    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/x"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonX"
            android:textSize="50sp" android:layout_marginEnd="80dp" app:layout_constraintVertical_bias="0.686"/>
</android.support.constraint.ConstraintLayout>